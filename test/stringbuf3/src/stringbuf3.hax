// Test the length(StringBuf) and ulength(StringBuf) functions.

module stringbuf3 is

  func run(s: String) is
    var sb = new StringBuf;
    append(sb, s);
    var n1 = #sb;
    var n2 = length(sb);
    var n3 = ulength(sb);
    write($"{n1:2} {n2:2} {n3:2} '{s}'\n");
  end

  func main() is
    run("hello world");
    run("");
    run("aaâézz");
  end

end
