// Test the regular expression reMatch() function.

module regex2 is

  func main() is
    doMatch("a+", "xxaaayy");
    doMatch("a(\\d+)z", "**a1234z**");
    doMatch("(\\[[a-z]+\\])+", "xxx[abc][def][helloworld]yyy");
    // invalid regex
    doMatch("*", "abc*def");
  end

  func doMatch(re: String, s: String) is
    var mRes = reMatch(re, s);
    if (ok(mRes)) then
      var m = mRes!;
      write($"reMatch('{re}', '{s}') -> ");
      for i : 0 .. #m - 1 do
        if i > 0 then
          write(", ");
        end
        write("'" + m[i] + "'");
      end
      write("\n");
    else
      write($"reMatch('{re}', '{s}') -> invalid regex\n");
    end
  end

end
