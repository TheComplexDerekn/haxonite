splitFirst('abc/def/ghi/jkl', '/'):
    'abc' | 'def/ghi/jkl'
    'def' | 'ghi/jkl'
    'ghi' | 'jkl'
    'jkl'
splitLast('abc/def/ghi/jkl', '/'):
    'abc/def/ghi' | 'jkl'
    'abc/def' | 'ghi'
    'abc' | 'def'
    'abc'
splitFirst('XYZabcXYZdefXYZXYZghiXYZ', 'XYZ'):
    '' | 'abcXYZdefXYZXYZghiXYZ'
    'abc' | 'defXYZXYZghiXYZ'
    'def' | 'XYZghiXYZ'
    '' | 'ghiXYZ'
    'ghi' | ''
    ''
splitLast('XYZabcXYZdefXYZXYZghiXYZ', 'XYZ'):
    'XYZabcXYZdefXYZXYZghi' | ''
    'XYZabcXYZdefXYZ' | 'ghi'
    'XYZabcXYZdef' | ''
    'XYZabc' | 'def'
    '' | 'abc'
    ''
splitFirst('abcXYZdefXYZXYZghiXYZ', 'XXX'):
    'abcXYZdefXYZXYZghiXYZ'
splitLast('abcXYZdefXYZXYZghiXYZ', 'XXX'):
    'abcXYZdefXYZXYZghiXYZ'
splitFirst('0000', '0'):
    '' | '000'
    '' | '00'
    '' | '0'
    '' | ''
    ''
splitLast('0000', '0'):
    '000' | ''
    '00' | ''
    '0' | ''
    '' | ''
    ''
splitFirst('', 'x'):
    ''
splitLast('', 'x'):
    ''
