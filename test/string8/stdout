splitFirst('/', 'abc/def/ghi/jkl'):
    'abc' | 'def/ghi/jkl'
    'def' | 'ghi/jkl'
    'ghi' | 'jkl'
    'jkl'
splitLast('/', 'abc/def/ghi/jkl'):
    'abc/def/ghi' | 'jkl'
    'abc/def' | 'ghi'
    'abc' | 'def'
    'abc'
splitFirst('XYZ', 'XYZabcXYZdefXYZXYZghiXYZ'):
    '' | 'abcXYZdefXYZXYZghiXYZ'
    'abc' | 'defXYZXYZghiXYZ'
    'def' | 'XYZghiXYZ'
    '' | 'ghiXYZ'
    'ghi' | ''
    ''
splitLast('XYZ', 'XYZabcXYZdefXYZXYZghiXYZ'):
    'XYZabcXYZdefXYZXYZghi' | ''
    'XYZabcXYZdefXYZ' | 'ghi'
    'XYZabcXYZdef' | ''
    'XYZabc' | 'def'
    '' | 'abc'
    ''
splitFirst('XXX', 'abcXYZdefXYZXYZghiXYZ'):
    'abcXYZdefXYZXYZghiXYZ'
splitLast('XXX', 'abcXYZdefXYZXYZghiXYZ'):
    'abcXYZdefXYZXYZghiXYZ'
splitFirst('0', '0000'):
    '' | '000'
    '' | '00'
    '' | '0'
    '' | ''
    ''
splitLast('0', '0000'):
    '000' | ''
    '00' | ''
    '0' | ''
    '' | ''
    ''
splitFirst('x', ''):
    ''
splitLast('x', ''):
    ''
