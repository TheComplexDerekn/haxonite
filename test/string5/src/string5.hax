// Test the split() function.

module string5 is

  func runSplit(term: String, s: String) is
    var v = split(term, s);
    write($"split('{term}', '{s}') ->");
    for ss : v do
      write($" '{ss}'");
    end
    write("\n");
  end

  public func main() is
    runSplit("XYZ", "abcXYZdefXYZXYZghiXYZ");
    runSplit("XXX", "abcXYZdefXYZXYZghiXYZ");
    runSplit("*", "*abc*def**ghi*");
    runSplit("0", "0000");
    runSplit("x", "");
  end

end
