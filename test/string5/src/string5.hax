// Test the split() function.

module string5 is

  func runSplit(s: String, term: String) is
    var v = split(s, term);
    write($"split('{s}', '{term}') ->");
    for ss : v do
      write($" '{ss}'");
    end
    write("\n");
  end

  func main() is
    runSplit("abcXYZdefXYZXYZghiXYZ", "XYZ");
    runSplit("abcXYZdefXYZXYZghiXYZ", "XXX");
    runSplit("*abc*def**ghi*", "*");
    runSplit("0000", "0");
    runSplit("", "x");
  end

end
