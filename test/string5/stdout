find('abcXYZdefXYZXYZghiXYZ', 'XYZ')
         ^     ^  ^     ^
find('abcXYZdefXYZXYZghiXYZ', 'XXX')
      
find('0000', '0')
      ^^^^
rfind('abcXYZdefXYZXYZghiXYZ', 'XYZ')
          ^     ^  ^     ^
rfind('abcXYZdefXYZXYZghiXYZ', 'XXX')
       
rfind('0000', '0')
       ^^^^
find('*abc*def**ghi*', *)
      ^   ^   ^^   ^
find('*abc*def**ghi*', +)
      
find('****', *)
      ^^^^
rfind('*abc*def**ghi*', *)
       ^   ^   ^^   ^
rfind('*abc*def**ghi*', +)
       
rfind('****', *)
       ^^^^
