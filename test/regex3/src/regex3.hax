// Test the regular expression reSplit() function.

module regex3 is

  func main() is
    doSplit(",", "abc,def,,g,");
    doSplit("-+", "abc--def----ghi-jkl");
    // invalid regex
    doSplit("*", "abc*def**g*");
  end

  func doSplit(re: String, s: String) is
    var vRes = reSplit(re, s);
    if (ok(vRes)) then
      var v = vRes!;
      write($"reSplit('{re}', '{s}') -> ");
      for i : 0 .. #v - 1 do
        if i > 0 then
          write(", ");
        end
        write("'" + v[i] + "'");
      end
      write("\n");
    else
      write($"reSplit('{re}', '{s}') -> invalid regex\n");
    end
  end

end
